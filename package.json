{
  "name": "alt-plus-tab",
  "version": "0.0.1",
  "displayName": "Alt + Tab",
  "author": "f-kraft",
  "description": "A web extension that mimics the alt + tab shortcut for browsers",
  "scripts": {
    "build": "tsc && vite build",
    "watch": "vite build --watch",
    "dev": "vite",
    "serve:firefox": "web-ext run --start-url \"about:debugging#/runtime/this-firefox\"  --source-dir ./dist/",
    "serve:chrome": "web-ext run -t chromium --start-url \"https://google.com\" --source-dir ./dist/",
    "test": "tsc src/**/*.ts --downlevelIteration --outDir out.test --target ES5 && mocha \"out.test/**/*.spec.js\""
  },
  "license": "MIT",
  "devDependencies": {
    "@samrum/vite-plugin-web-extension": "^0.1.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/webextension-polyfill": "^0.8.2",
    "chai": "^4.3.6",
    "mocha": "^9.2.2",
    "typescript": "^4.5.4",
    "vite": "~2.8.0",
    "web-ext": "^6.8.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.8.0"
  }
}
